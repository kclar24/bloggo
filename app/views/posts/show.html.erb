<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
          <div class="title">
            <h1><%= @post.title %></h1>
          </div>
          <br>
          <p>Author: <strong><%= @post.author %></strong></p>
      </div>
      <div class="panel-body">
        <p><%= @post.entry %>
      </div>
      <div class="panel-footer button">
          <p><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info"%> </p>
          <p><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
      </div>
    </div>
  </div>
</div>

<%= render "comments/form"%>

<div class="panel panel-default">
  <div class="panel-header">
    <h3>Leave a Comment</h3>
  </div>
  <div class="panel-body">
    <% @post.comments.each do |comment| %>
      <p>
        <strong><%= comment.author %></strong> says:
      </p>
      <p>
        <%= comment.entry %>
      </p>
      <hr>
    <% end %>
  </div>


</div>

<%= link_to 'Back', posts_path, class: "btn btn-default" %>
